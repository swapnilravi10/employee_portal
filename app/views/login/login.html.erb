<div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
    <%= form_tag :action => 'login_user' do %>
    <div class="card card0 border-0">
        <div class="row d-flex">
            <div class="col-lg-6">
                <div class="card1 pb-5">
                    <div class="row"> <%= image_tag "full_logo.png", :class => "logo", :style => 'height:45px' %> </div>
                    <div class="row px-3 justify-content-center mt-4 mb-5 border-line"> <img src="https://i.imgur.com/uNGdWHi.png" class="image"> </div>
                </div>
            </div>
            <div class="col-lg-6">
            <%= render "shared_admin/flash" %>
                <div class="card2 card border-0 px-4 py-5 mt-5">
                <div>
                    
                </div>
                    <div class="row px-3"> <label class="mb-1">
                            <h6 class="mb-0 text-sm">Email Address</h6>
                        </label> <%= text_field 'login', 'email',placeholder:"Enter email id" %> </div>
                    <div class="row px-3 mt-1"> <label class="mb-1">
                            <h6 class="mb-0 text-sm">Password</h6>
                        </label> <%= password_field 'login', 'password', placeholder:"Enter your password" %></div>
                    <div class="row mb-3 mt-3 px-3"> <button type="submit" class="btn btn-blue text-center login-btn">Login</button> </div>
                    <!-- <div class="row mb-4 px-3"> <small class="font-weight-bold">Don't have an account? <%= link_to "Register", "register", :style=>'color: #007bff;' %></small> </div> -->
                    <div class="row mb-4 px-3"> <small class="font-weight-bold"> Forgot password? <%= link_to "Click to reset password", "forgot/password", :style=>'color: #007bff;' %></small> </div>
                    </div>
            </div>
            <% end-%>
        </div>
    </div>
</div>
