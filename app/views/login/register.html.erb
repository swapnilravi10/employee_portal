<div class="mt-5 bg-light">
<div class="col-md-8 mx-auto" style="background-color: #fff;
border: 1px solid #ededed;box-shadow: 0px 1px 2px 0px #757575;;padding: 4%;border-radius: 8px;margin-bottom: 20px;">
  <%= render "shared_admin/flash"%>    
  <article class="container mx-auto">
  <div style="text-align:center;">
  <%= image_tag "Anv-logo.png", style:'width:200px'%>
  </div>
    <h4 class="mt-3 text-center page-title mb-4">Create Account</h4>
    <%= form_tag :action => 'create' do %>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="first_name">First name</label>
          <%= text_field 'register', 'first_name', class: "form-control", placeholder:"First name" %>
        </div>
        <div class="form-group col-md-6">
          <label for="last_name">Last name</label>
          <%= text_field 'register', 'last_name', class: "form-control", placeholder:"Last name" %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="email">Email</label>
          <%= text_field 'register', 'email', class: "form-control", placeholder:"Email address" %>
        </div>
        <div class="form-group col-md-6">
          <label for="phone_number">Phone number</label>
          <%= text_field 'register', 'phone_number', class: "form-control", placeholder:"Phone number",:maxlength => 12 %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="password">Password</label>
          <%= password_field 'register', 'password', class: "form-control", placeholder:"Password" %>
        </div>
        <div class="form-group col-md-6">
          <label for="password_confirmation">Retype password</label>
          <%= password_field 'register', 'password_confirmation', class: "form-control", placeholder:"Confirm password" %>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="emergency_contact_name">Adhar number</label>
          <%= text_field 'register', 'adhar_card_number', class: "form-control", placeholder:"Adhar number",:maxlength => 12 %>
        </div>
        <div class="form-group col-md-6">
          <label for="first_name">Date of Joining</label>
            <%= date_field("register", "date_of_joining", class: "form-control")%>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="emergency_contact_name">Emergency contact name</label>
          <%= text_field 'register', 'emergency_contact_name', class: "form-control", placeholder:"Emergency contact name" %>
        </div>
        <div class="form-group col-md-6">
          <label for="emergency_contact_number">Emergency contact number</label>
          <%= text_field 'register', 'emergency_contact_number', class: "form-control", placeholder:"Emergency contact number",:maxlength => 12 %>
        </div>
      </div>
      <div class="text-center form-group">
          <button type="submit" class="btn btn-primary add-employee-btn"> Create Account  </button>
      </div>   
      <p class="text-center">Have an account? <%= link_to "Log in","login" %></p>                                                                 
    <% end %>
  </article>
  </div>
</div>
