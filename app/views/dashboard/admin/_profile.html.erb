<div class="container pl-5 pr-5" style="margin-top:30px">
<div class="row" style="background-color: #fff;border: 1px solid #ededed;box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.2);padding:1%; border-radius: 8px;margin-bottom:20px;box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.2);">
  <div class="col-sm-2">
    <a href="#" aria-label="Change Profile Picture" data-toggle="modal" data-target="#profile_picture_modal">
      <% if current_user.avatar.attached? %>
      <div class="profile-pic" style="background-image: url(<%= rails_blob_url(current_user.avatar) %>); width:180px;height:180px;">
          <span class="glyphicon glyphicon-camera"></span>
          <span>Change Image</span>
      </div>
      <% else %>
      <div class="profile-pic" style="background-image: url(/assets/profilepicturelogo.jpg); width:180px;height:180px; border-radius:8px; background-size:cover;border: 1px solid #eaeaea;"  >
          <span class="glyphicon glyphicon-camera"></span>
          <span>Change Image</span>
      </div>
      <% end %>
    </a> 
  </div>
  <div class="col-sm-10">
    <div class="container px-4 py-1" style="height:auto;">
      <div class="row">
        <div class="col-md-6"> 
          <div style="font-size: 25px;font-weight: 700;" class="mb-1"> <%= current_user.full_name %> </div>
          <div style="font-size: 15px;" class="mb-3"> <%= current_user.designation&.name %> </div>
          <div style="font-size: 18px;" class="mb-1"> <b>E </b>  <%= current_user.email %> </div>
          <div style="font-size: 18px;" class="mb-1"> <b>M</b> +91-<%= current_user.phone_number %> </div>
          <div style="font-size: 18px;" class="mb-1"> <b>Joined on</b> <%= current_user.date_of_joining.strftime('%d %B %Y') %> </div>
        </div>
        <div class="col-md-6">
          <div style="color:#777777; font-size: 27px;text-align: right">
            Today, <%= Date.today.strftime('%d %B %Y') %>
          </div>
          <div class="update-status">
            <%= render 'status' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-4 pl-0">
  <div class="col-md-12  dashboard-divs">
    <h1 class="dashboard-div-head">Team Anveshak</h1> 
   <%= render 'employee_list'%>
  </div>
  </div>
