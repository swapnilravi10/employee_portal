<%= render "shared_admin/navs" %>
<%= render "shared_admin/breadcrumbs" %>
<div class="container mt-5">
<h2 class="text-center mb-5">Update System User</h2>
<%= render "shared_admin/flash" %>
<div>
<%= form_for @admin, :url =>{:action => "update", :id =>@admin} do |a| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="first_name">First name</label>
      <%= a.text_field 'first_name' , class: "form-control", placeholder:"First name" %>
    </div>
    <div class="form-group col-md-6">
      <label for="last_name">Last name</label>
      <%= a.text_field 'last_name', class: "form-control", placeholder:"Last name"%>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="role">Role</label>
      <%= collection_select(:user, :role_id, @roles, :id, :role_name, {prompt: true}, {class: 'form-control edit-role-search'}) %>
    </div>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <%= a.text_field 'email', class: "form-control", placeholder:"Email "%>
  </div>
  <div class="form-group">
    <label for="phone_number">Phone number</label>
    <%= a.text_field 'phone_number', class: "form-control", placeholder:"Phone number" %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="emergency_contact_name">Emergency contact name</label>
      <input type="text" class="form-control" id="emergency_contact_name">
    </div>
    <div class="form-group col-md-6">
      <label for="emergency_contact_number">Emergency contact number</label>
      <input type="text" class="form-control" id="emergency_contact_number">
    </div>
  </div>
  
  <button type="submit" class="btn btn-primary">Update</button>
<% end -%>  
</div>
<script>
$(document).ready(function() {
  $('.edit-role-search').select2()
})
</script>