
      <div class="modal-header">
        <h4 class="modal-title">Update post</h4>
        <button type="button" class="btn" data-dismiss="modal">Close</button>
      </div>

      <!-- Modal body -->
      <%= form_for @post, :url =>{:action => "update", :id =>@post} do |po| %>
      <div class="modal-body">
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= po.text_area  'post' , class: "form-control", placeholder: "What's on your mind ?" %>
          </div>
          <div class="form-group col-md-12">
            <input type="hidden", id='user_id' , value="<%= @user.id %>", name="post[user_id]">
          </div>
          <div class="form-group col-md-12">
            <!-- To upload image and videos will come here -->
          </div>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Post</button>
        <% end %>
      </div>
