
      <div class="modal-header" style="border-bottom:0px; ">
        <h4 class="modal-title page-title">Create a post</h4>
        <button type="button" class="btn" data-dismiss="modal">Close</button>
      </div>

      <!-- Modal body -->
      <%= form_for(@post, :url => { :action => 'create' },:html => { :multipart => true }) do |p| %>
      <div class="modal-body">
        <div class="form-row">
          <div class="form-group col-md-12">
            <%= p.text_area  'post' , class: "form-control", placeholder: "What's on your mind ?" %>
          </div>
          <div class="form-group col-md-12">
            <input type="hidden", id='user_id' , value="<%= @user.id %>", name="post[user_id]">
          </div>
          <div class="form-group col-md-12">
          <%= p.fields_for :post_attachments do |pimg| %>
            <div class="field">
              <%= pimg.file_field :post_image, :multiple => true, name: "post_attachments[post_image][]" %>
            </div>
          <% end %>
          </div>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <div class="actions">
          <%= p.submit%>
        </div>
        <% end %>
      </div>
