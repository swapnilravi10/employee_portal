<%= render "shared_admin/navs" %>
<%= render "shared_admin/breadcrumbs" %>
<div class="container mt-5 pl-5 pr-5">
<h2 class="text-center mb-5 page-title">Update Team</h2>
<%= render "shared_admin/flash" %>
<div>
<%= form_for @team, :url =>{:action => "update", :id =>@team} do |t| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="first_name">Team name</label>
      <%= t.text_field 'name' , class: "form-control", placeholder:"Team name" %>
    </div>
    <div class="form-group col-md-6">
      <label for="first_name">Team Manager</label>
      <%= collection_select(:team, :project_manager_id, @project_managers, :id, :full_name, {prompt: true}, {class: 'form-control new-team-leader-search'}) %>
    </div>
    <div class="form-group col-md-6">
      <label for="last_name">Description</label>
      <%= t.text_area 'description', class: "form-control", placeholder:"Description"%>
    </div>
  </div>
  <button type="submit" class="btn btn-primary add-new-emp-btn">Update</button>
<% end -%>  
</div>
