<%= render "shared_admin/navs" %>
<%= render "shared_admin/breadcrumbs" %>
<div class="container mt-5 mb-5 pl-5 pr-5">
<h2 class="text-center mb-5 page-title">New Team</h2>
<%= render "shared_admin/flash" %>
<div>
<%= form_tag :action => 'create' do %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="first_name">Team name</label>
      <%= text_field 'team', 'name', class: "form-control", placeholder:"Team name" %>
    </div>
    <div class="form-group col-md-6">
      <label for="first_name">Team Manager</label>
      <%= collection_select(:team, :project_manager_id, @project_managers, :id, :full_name, {prompt: true}, {class: 'form-control new-team-leader-search'}) %>
    </div>
    <div class="form-group col-md-6">
      <label for="last_name">Description</label>
      <%= text_area( :team, :description, class: "form-control", placeholder:"Description") %>
    </div>
  </div>
  <button type="submit" class="btn btn-primary add-new-emp-btn">Add</button>
<% end -%>  
</div>