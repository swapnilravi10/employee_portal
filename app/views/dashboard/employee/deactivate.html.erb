<%= render "shared_admin/navs" %>
<%= render "shared_admin/breadcrumbs" %>
<div class="container mt-5">
<h2 class="text-center mb-5 page-title">Deactivate Employee</h2>
<%= render "shared_admin/flash" %>
<div>
<%= form_for @employee, :url =>{:action => "deactivate_emp", :id =>@employee} do |e| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="first_name">Employee name</label>
      <%= e.text_field 'full_name' , class: "form-control", placeholder:"First name", disabled:true %>
    </div>
    <div class="form-group col-md-6">
    <label for="first_name">Date of deactivation</label>
    <%= date_field("user", "archival_date", class: "form-control")%>
  </div>
  <%= hidden_field_tag 'archive', true %>
  <%= hidden_field_tag 'user_id', @employee.id %>
  </div>
  </div>
  <button type="submit" class="btn btn-primary add-new-emp-btn">Confirm</button>
<% end -%>  
</div>

</body>
</html>