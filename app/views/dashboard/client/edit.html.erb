<%= render "shared_admin/navs" %>
<%= render "shared_admin/breadcrumbs" %>
<div class="container mt-5 mb-5 pl-5 pr-5">
<h2 class="text-center mb-5 page-title">Update Client</h2>
<%= render "shared_admin/flash" %>
<div>
<%= form_for @client, :url =>{:action => "update", :id =>@client} do |c| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="first_name">First name</label>
      <%= c.text_field 'first_name' , class: "form-control", placeholder:"First name" %>
    </div>
    <div class="form-group col-md-6">
      <label for="last_name">Last name</label>
      <%= c.text_field 'last_name', class: "form-control", placeholder:"Last name"%>
    </div>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <%= c.text_field 'email', class: "form-control", placeholder:"Email "%>
  </div>
  <div class="form-group">
  <label for="phone_number">Company name</label>
  <%= c.text_field 'company_name', class: "form-control", placeholder:"Company name" %>
</div>
    <div class="form-group">
        <label for="first_name">Country</label>
        <%= c.country_select('country', {},{ class: 'form-control' }) %>
    </div>
  <div class="form-group">
    <label for="phone_number">Phone number</label>
    <%= c.text_field 'phone_number', class: "form-control", placeholder:"Phone number" %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="company_email">Company email</label>
      <%= text_field 'client', 'company_email', class: "form-control", placeholder:"Company email" %>
    </div>
    <div class="form-group col-md-6">
      <label for="comapny_registration_number">Company registration number</label>
      <%= text_field 'client', 'company_registration_number', class: "form-control", placeholder:"Company registration number" %>
    </div>
  </div>
  <button type="submit" class="btn btn-primary add-new-emp-btn">Update</button>
<% end -%>  
</div>