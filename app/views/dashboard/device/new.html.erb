<%= render "shared_admin/navs" %>
<%= render "shared_admin/breadcrumbs" %>
<div class="container mt-5 mb-5 pl-5 pr-5">
<h2 class="text-center mb-5 page-title">New Device</h2>
<%= render "shared_admin/flash" %>

<div>
<%= form_tag :action => 'create' do %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="first_name">Device name</label>
      <%= text_field 'device', 'name', class: "form-control", placeholder:"Device name" %>
    </div>
    <div class="form-group col-md-6">
      <label for="last_name">Device Type</label>
      <%= collection_select(:device, :device_type_id, DeviceType.all, :id, :device_type, {prompt: true}, {class: 'form-control new-user-search', required: true}) %>
    </div>
  </div>
  <div class="form-group">
    <label for="email">Description</label>
    <%= text_area 'device', 'description', class: "form-control", placeholder:"Description" %>
  </div>
  <button type="submit" class="btn btn-primary add-new-emp-btn">Add</button>
<% end -%>  
</div>