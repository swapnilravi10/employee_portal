<%= render "shared_admin/navs" %>
<%= render "shared_admin/breadcrumbs" %>
<div class="container mt-5 mb-5 pl-5 pr-5">
<h2 class="text-center mb-5 page-title">Update Device</h2>
<%= render "shared_admin/flash" %>
<div>
<%= form_for @device, :url =>{:action => "update", :id =>@device} do |d| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="first_name">Device name</label>
      <%= d.text_field 'name' , class: "form-control", placeholder:"Device name" %>
    </div>
    <div class="form-group col-md-6">
      <label for="last_name">Device type</label>
      <%= d.collection_select(:device_type_id, DeviceType.all, :id, :device_type, {prompt: true}, {class: 'form-control new-user-search', required: true}) %>
    </div>
  </div>
  <div class="form-group">
    <label for="email">Description</label>
    <%= d.text_area 'description', class: "form-control", placeholder:"Description"%>
  </div>
  <button type="submit" class="btn btn-primary add-new-emp-btn">Update</button>
<% end -%>  
</div>